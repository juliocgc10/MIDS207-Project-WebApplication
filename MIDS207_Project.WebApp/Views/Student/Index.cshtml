    <script src="~/Assets/JavaScript/Student.js"></script>
    <script>
    $(document).ready(function () {

        var args = {
            UrlWepApi: '@urlWebApi'
        };

        MIDS207_Project.Student.npMainFunction(args);
    });
    </script>
